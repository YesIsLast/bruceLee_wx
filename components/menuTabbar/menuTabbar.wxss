/* components/menuTabbar/menuTabbar.wxss */
.menuTabbar-main {
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  width: 100%;
  height: 120rpx;
  z-index: 99;
  color: #9e9e9e;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 35rpx;
  font-weight: 700;
  box-shadow: 1rpx 0 10rpx 1rpx #ffffff;
  padding-bottom: 20rpx;
  background-size: 100% 100%;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  min-height: 100%;
  min-width: 20vw;
}

.tabbar-item-active .tabbar-item-text {
  transform: scale(1.3);
  color: rgb(235, 235, 235);
}

.tabbar-item-active .tabbarIcon-Img {
  transform: scale(1.5);
  position: relative;
  top: -30rpx;
}

.tabbarIcon-Img {
  height: 110rpx;
  width: 110rpx;
}