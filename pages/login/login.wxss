/* pages/login/login.wxss */
.login-main {
  width: 100vw;
  height: 100vh;
  background-size: 100% 100%;
  z-index: -1;
}

.login-tit {
  z-index: 0;
  width: 100%;
  height: 160rpx;
  padding-top: 140rpx;
}

.login-tit image {
  width: 100%;
  height: 100%;
}

.login-content {
  min-height: 70vh;
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 0 5%;
  justify-content: center;
  align-items: center;
  background-size: 100% 100%;
}

.login-content image {
  z-index: 0;
  position: absolute;
}

.login-form {
  z-index: 1;
  display: flex;
  flex-direction: column;
  min-height: 50vh;
  width: 80vw;
  padding: 20rpx;
}

.login-btn {
  background-color: #dac400 !important;
  border-radius: 50rpx;
  width: 70vw !important;
  height: 80rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx;
  letter-spacing: 10rpx;
  color: rgb(255, 255, 255) !important;
}

.login-text-blue {
  color: #FCDF44;
}

.login-text-white {
  color: #cccccc;
}

.login-footer {
  font-size: 28rpx;
}

.login-form-row {
  color: #FCDF44;
  border-bottom: solid 2rpx #FCDF44;
  width: 100%;
  margin-bottom: 50rpx;
}

.login-form-text {
  letter-spacing: 5rpx;
}

.login-form-input {
  padding: 10rpx;
}

.login-remember {
  margin-bottom: 10rpx;
}

.otherLoginLine {
  border-bottom: solid 1rpx #cccccc;
  flex: 2;
  height: 20rpx;
}

.otherLoginLine-text {
  padding: 0 30rpx;
  color: #cccccc;
  position: relative;
  top: -5rpx;
}

/* 快速登录方式按钮样式 */
.fastLogin {
  width: 100rpx !important;
  padding: 0 !important;
  background-color: transparent !important;
}