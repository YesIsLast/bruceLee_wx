<!--pages/login/login.wxml-->
<view class="login-main" style="background-image: url(https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fattachments.gfan.com%2Fforum%2Fattachments2%2Fday_110406%2F1104062007632ac27fcb66edc7.jpg&refer=http%3A%2F%2Fattachments.gfan.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1612533898&t=82c4810fd3ed5dee32bcf5cca7622095);">
	<!-- 企业名称 -->
	<view class="login-tit">
		<image src="../../static/img/logo-text.png" mode="aspectFit"></image>
	</view>
	<view class="login-content">
		<!-- 登录表单 -->
		<view class="login-form">
			<view class="login-form-row">
				<view class="login-form-text">用户名</view>
				<input class="login-form-input" type="text"/>
			</view>
			<view class="login-form-row">
				<view class="login-form-text">密码</view>
				<input class="login-form-input" type="text"/>
			</view>
			<!-- 记住密码 -->
			<!-- <view class="login-remember">
				<checkbox value="cb" checked="true" color="#1777FF" style="transform:scale(0.8);" />
				<text>记住密码</text>
			</view> -->
			<!-- 隐私政策 -->
			<view class="login-footer login-text-white">
				<checkbox value="cb" checked="true" color="#FCDF44" style="transform:scale(0.8);" />已同意《
				<text class="login-text-blue">用户服务协议</text>及
				<text class="login-text-blue">隐私政策</text>》
			</view>
			<!-- 登录按钮 -->
			<button class="login-btn" type="primary" bindtap="loginFun">登录</button>
		</view>
	</view>
</view>