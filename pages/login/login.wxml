<!--pages/login/login.wxml-->
<view class="login-main" style="background-image: url(../../static/img/login-bg.png);">
	<!-- 企业名称 -->
	<view class="login-tit">
		<image src="../../static/img/logo-text.png" mode="aspectFit"></image>
	</view>
	<view class="login-content">
		<!-- 登录表单背景图片 -->
		<image src="../../static/img/login-main-bg.png" style="width:100%;height:60vh;" mode="aspectFit"></image>
		<!-- 登录表单 -->
		<view class="login-form">
			<view class="login-form-row">
				<view class="login-form-text">用户名</view>
				<input class="login-form-input" type="text"/>
			</view>
			<view class="login-form-row">
				<view class="login-form-text">密码</view>
				<input class="login-form-input" type="text"/>
			</view>
			<!-- 记住密码 -->
			<view class="login-remember">
				<checkbox value="cb" checked="true" color="#1777FF" style="transform:scale(0.8);" />
				<text>记住密码</text>
			</view>
			<!-- 登录按钮 -->
			<button class="login-btn" type="primary" bindtap="loginFun">登录</button>
			<!-- 隐私政策 -->
			<view class="login-footer">
				<checkbox value="cb" checked="true" color="#1777FF" style="transform:scale(0.8);" />已同意《汇星
				<text class="login-text-blue">用户服务协议</text>及
				<text class="login-text-blue">隐私政策</text>》
			</view>
		</view>
	</view>
</view>