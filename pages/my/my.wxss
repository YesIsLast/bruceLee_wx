/* pages/my/my.wxss */
/* 用户背景图片 */
.myBackground {
  height: 50vh;
  width: 100vw;
  box-sizing: border-box;
  z-index: -1;
  position: fixed;
  top: 0;
}

.my-main {
  height: 55vh;
  transform: translateY(45vh);
  width: 100vw;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  background-color: #ffffff;
  z-index: 1;
  display: flex;
  flex-direction: column;
  transition: all .3s cubic-bezier(.97,-0.35,.33,1.37);
}

.my-main-open {
  height: 80vh;
  transform: translateY(20vh)
}

.my-userInfo {
  position: relative;
  padding: 50rpx 50rpx 20rpx 80rpx;
  box-shadow: 0rpx 5rpx 10rpx -5rpx #b1b1b1;
}

.my-headImg {
  height: 220rpx;
  width: 220rpx;
  border-radius: 50%;
  box-shadow: 0 0 10rpx 3rpx #aaaaaa;
  position: absolute;
  top: -90rpx;
}

.my-userInfo-setting {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.my-userInfo-setting .my-userInfo-editorBtn {
  border: 1rpx solid #c0c0c0;
  text-align: center;
  padding: 10rpx 80rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-userInfo-setting .my-userInfo-settingBtn {
  height: 50rpx;
  width: 50rpx;
  border: 1rpx solid #c0c0c0;
  padding: 10rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.my-userInfo-settingBtn .iconfont {
  font-size: 40rpx;
}

.my-username {
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
}

.my-username-master {
  font-size: 40rpx;
  font-weight: 700;
  padding: 5rpx 0;
}

.my-username-branch {
  font-size: 30rpx;
  color: #aaaaaa;
  padding: 5rpx 0;
}

/* 内容区域分隔线 */
.my-divider-line {
  width: 100%;
  height: 30rpx;
  background-color: #f5f5f5;
}

.my-userCenter {
  overflow-x: hidden;
  overflow-y: scroll;
  padding-bottom: 150rpx;
}

/* 个人中心菜单列表 */
.my-menu-list {}

.my-menu-list-item {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 1rpx solid #bdbdbd; */
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 35rpx;
}

.my-menu-list-item .list-icon {
  font-size: 35rpx;
  padding-right: 15rpx;
}
.my-menu-list-item-content{
  color: #a1a1a1;
  font-size: 30rpx;
}
.my-menu-list-item-content .iconfont{
  padding-left: 20rpx;
}

#logoutBtn {
  background-color: rgb(116, 116, 116);
  background-image: linear-gradient(135deg, #3f3f3f 30%, #ebe857);
  color: #f7e921;
  margin-top: 30rpx;
  border-radius: 50rpx;
}