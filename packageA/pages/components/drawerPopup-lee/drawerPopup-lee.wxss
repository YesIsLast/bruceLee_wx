/* components/drawerPopup-lee/drawerPopup-lee.wxss */
/* 蒙层样式 */
.drawerPopupLee-main .main-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100vh;
  width: 100vw;
  background-color: #000000;
  opacity: .6;
  z-index: 999;
  overflow: hidden;
}

.drawerPopupLee-main .main-content {
  position: fixed;
  z-index: 1000;
  transition: all .4s cubic-bezier(.92, -0.48, .24, 1.49);
  box-sizing: border-box;
  /* 设置默认抽屉框样式（隐藏） */
  transform: translateY(100vh);
  overflow: scroll;
}